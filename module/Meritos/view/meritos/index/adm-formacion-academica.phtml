function cargarInfo(data) {
    //console.log(data);
    document.getElementById("nivel_titulo").value = data.nivel_titulo;
    let categoria = (data.anio_graduacion) ? 'graduado' : 'pensum';
    
    if(categoria == 'graduado'){
        document.getElementById(`graduado`).checked = true;    
        document.getElementById(`fecha_obtencion`).value = data.anio_graduacion;    
        
    }else if(categoria == 'pensum'){
        document.getElementById(`pensum`).checked = true; 
        document.getElementById(`fecha_obtencion`).value = data.anio_cierre_pensum;    
    }

    let valueObject = optionsFormacion.find((e) => e.nivel_titulo == data.nivel_titulo && e.categoria == categoria);
    document.querySelector("#label_pts").innerHTML = valueObject.puntos;
    document.querySelector("#puntos").value = valueObject.puntos;

}

