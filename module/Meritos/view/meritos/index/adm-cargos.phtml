    puntos: 1,
  },
];

function cargarInfoTipoCargo(value) {
    let categorias = listaCargos.filter((e) => e.type == value);
    const select = document.getElementById("tipo_nombramiento");
    //clearSelect(select);
    for (const option of categorias) {
        let newOption = document.createElement("option");
        newOption.value = option.value;
        newOption.text = option.name;
        select.add(newOption);
    }
    select.selectedIndex = 0;
    document.querySelector("#label_pts").innerHTML = "0";
    document.querySelector("#puntos").value = 0;
}

function cargarInfo(data) {
    //console.log(data);
    document.getElementById("tipo_cargo").value = data.tipo_cargo;
    cargarInfoTipoCargo(data.tipo_cargo);

    document.getElementById("tipo_nombramiento").value = data.tipo_nombramiento;
    let valueObject = listaCargos.find((e) => e.value == data.tipo_nombramiento);
    document.querySelector("#label_pts").innerHTML = valueObject.puntos;
    document.querySelector("#puntos").value = valueObject.puntos;
    

}

cargarInfo(<?= json_encode($this->solicitudData[0]) ?>);

</script>